@import "../../template/start.wxss";
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.content {
  padding-bottom: 20rpx;
}

.in-theaters-bar {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.in-theaters-bar .title {
  font-size: 30rpx;
  color: #268dcd;
  padding-left: 10rpx;
}

.in-theaters-bar .more {
  font-size: 30rpx;
  color: #268dcd;
  flex-grow: 1;
  text-align: right;
  padding-right: 10rpx;
}

.in-theaters-bar .arrow-icon {
  width: 13rpx;
  height: 24rpx;
  padding-right: 10rpx;
}

.in-theaters-list {
  display: flex;
  padding-left: 20rpx;
}

.in-theaters-item {
  display: flex;
  width: 200rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-right: 20rpx;
}

.in-theaters-item image {
  width: 200rpx;
  height: 300rpx;
}

.in-theaters-item .title {
  padding-top: 20rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  opacity: 0.8;
}

.in-theaters-item .genres {
  font-size: 16rpx;
  line-height: 16rpx;
  opacity: 0.5;
}

.in-theaters-item .original_title {
  font-size: 16rpx;
  line-height: 16rpx;
  opacity: 0.5;
}

.in-theaters-item .genres {
  font-size: 20rpx;
  line-height: 20rpx;
  align-self: flex-start;
  padding-left: 20rpx;
  opacity: 0.8;
}

.score-content {
  display: flex;
  align-items: center;
}

.in-theaters-item .score {  
  font-size: 24rpx;
  color: #ffd33b;  
}  

.loading {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.loading image {
  width: 50rpx;
}

.search-bar {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  background-color: #eee;
  text-align: center;
  box-shadow: 0 10rpx 60rpx rgba(0, 0, 0, .3);
}

.search-txt {
  display: inline-block;
  width: 730rpx;
  height: 60rpx;
  background-color: #fff;
  background-image: url(data:image/png;base64,);
  background-position: 20rpx center;
  background-repeat: no-repeat;
  background-size: 50rpx;
  border-radius: 8rpx;
}

.search-txt-plc {
  color: #bfbfbf;
}

  